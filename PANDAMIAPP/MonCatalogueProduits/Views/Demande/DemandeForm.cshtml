@model MonCatalogueProduit.Service.Demande
@{ ViewBag.title = "Saisie d'un Demande"; }


<div class="container spacer">

    <form asp-coontroller="Demande" asp-action="SaveDemande" method="post">
        <div class="form-group">
            @Html.LabelFor(p => p.Description, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Description, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.NombreDeFois, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.NombreDeFois, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.NombreDeFois, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>

</div>


