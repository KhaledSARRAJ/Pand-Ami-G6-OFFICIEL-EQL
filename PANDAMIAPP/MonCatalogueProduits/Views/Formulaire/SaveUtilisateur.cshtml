@using MonCatalogueProduit.Service;
@using GestionProduits.ViewModels;

@model Utilisateur
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Multi Step Form | CodingNepal</title>
    <link rel="stylesheet" href="/css/styleRegister.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body>
    <div class="container">
        <header>Inscription</header>
        <div class="progress-bar">
            <div class="step">
                <p>Identité</p>
                <div class="bullet">

                    <span>1</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Contact</p>
                <div class="bullet">
                    <span>2</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Adresse</p>
                <div class="bullet">
                    <span>3</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
            <div class="step">
                <p>Connexion</p>
                <div class="bullet">
                    <span>4</span>
                </div>
                <div class="check fas fa-check"></div>
            </div>
        </div>
        <div class="form-outer">method="post" asp-action="SaveUtilisateur"
            <form method="post" asp-action="SaveUtilisateur">
                <div class="page slide-page">
                    <div class="title">Identité</div>
                    <div class="field">
                        <div class="label">Nom</div>
                        <input type="text" name="NomUtilisateur" class="form-control" value="@Model.NomUtilisateur" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.NomUtilisateur, "", new { @class = "text-danger" })

                    </div>
                    <div class="field">
                        <div class="label">Prénom</div>
                        <input type="text" name="Prenom" class="form-control" value="@Model.Prenom" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.Prenom, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        <div class="label">Date de naissance</div>
                        <input type="DateTime" name="DateDeNaissance" class="form-control" value="@Model.DateDeNaissance" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        <div class="label">Sexe</div>
                        <select>
                            <option></option>
                            <option value="@Model.UtilisateurSexe">Homme</option>
                            <option value="@Model.UtilisateurSexe">Femme</option>
                            <option value="@Model.UtilisateurSexe">Autre</option>
                        </select>
                    </div>

                    <div class="field">
                        <button class="firstNext next">Suivant</button>
                    </div>
                </div>

                <div class="page">
                    <div class="title">Contact</div>
                    <div class="field">
                        <div class="label">E-mail</div>
                        <input type="text" name="AdresseMail" class="form-control" value="@Model.AdresseMail" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.AdresseMail, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        <div class="label">Téléphone</div>
                        <input type="tel" name="NumTel" class="form-control" value="@Model.NumTel" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.NumTel, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        <div class="label">Autre Téléphone (facultatif)</div>
                        <input type="tel" name="AutreTel" class="form-control" value="@Model.AutreTel" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="field btns">
                        <button class="prev-1 prev">Précédent</button>
                        <button class="next-1 next">Suivant</button>
                    </div>
                </div>

                <div class="page">
                    <div class="title">Adresse</div>

                    <div class="field">
                        <div class="label">Région</div>
                        <select>
                            <option></option>
                            <option value="@Model.Ville">Auvergne-Rhône-Alpes</option>
                            <option value="@Model.Ville">Bourgogne-Franche-Comté</option>
                            <option value="@Model.Ville">Bretagne</option>
                            <option value="@Model.Ville">Centre-Val de Loire</option>
                            <option value="@Model.Ville">Corse</option>
                            <option value="@Model.Ville">Grand Est</option>
                            <option value="@Model.Ville">Hauts-de-France</option>
                            <option value="@Model.Ville">Île-de-France</option>
                            <option value="@Model.Ville">Normandie</option>
                            <option value="@Model.Ville">Nouvelle-Aquitaine</option>
                            <option value="@Model.Ville">Occitanie</option>
                            <option value="@Model.Ville">Pays de la Loire</option>
                            <option value="@Model.Ville">Provence-Alpes-Côte d'Azur</option>
                            <option value="@Model.Ville">Guadeloupe</option>
                            <option value="@Model.Ville">Martinique</option>
                            <option value="@Model.Ville">Guyane</option>
                            <option value="@Model.Ville">La Réunion</option>
                            <option value="@Model.Ville">Mayotte</option>
                        </select>

                    </div>


                    <div class="field">
                        <div class="label">Numéro de rue</div>
                        <input type="text" name="NumeroRue" class="form-control" value="@Model.NumeroRue" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.NumeroRue, "", new { @class = "text-danger" })
                    </div>

                    <div class="field">
                        <div class="label">Nom de la rue</div>
                        <input type="text" name="NomDeRue" class="form-control" value="@Model.NomDeRue" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.NomDeRue, "", new { @class = "text-danger" })
                    </div>

                    <div class="field">
                        <div class="label">Code postal</div>
                        <input type="text" name="CodePostal" class="form-control" value="@Model.CodePostal" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.CodePostal, "", new { @class = "text-danger" })
                    </div>

                    <div class="field">
                        <div class="label">Ville</div>
                        <input type="text" name="Ville" class="form-control" value="@Model.Ville" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.Ville, "", new { @class = "text-danger" })
                    </div>

                    <div class="field btns">
                        <button class="prev-2 prev">Précédent</button>
                        <button class="next-2 next">Suivant</button>
                    </div>
                </div>

                <div class="page">
                    <div class="title">Connexion</div>
                    <div class="field">
                        <div class="label">Nom d'utilisateur</div>
                        <input type="text" name="NomUtilisateur" class="form-control" value="@Model.NomUtilisateur" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.NomUtilisateur, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        <div class="label">Mot de passe</div>
                        <input type="text" name="Password" class="form-control" value="@Model.Password" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="field">
                        <div class="label">Confirmer le mot de passe</div>
                        <input type="text" name="Password" class="form-control" value="@Model.Password" />
                        <!--Message d"erreur-->
                        @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="field btns">
                        <button class="prev-3 prev">Précédent</button>
                        <button type="submit" class="submit">Je m'inscris!</button>
                        

                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>

</body>
</html>
