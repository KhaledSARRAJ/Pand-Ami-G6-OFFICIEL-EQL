@model MonCatalogueProduit.Service.Demande

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">

        <h3 class="pull-right">@Model.Description</h3>
        <h3>
            <a asp-controller="Demande" asp-action="Details" asp-route-drinkId="@Model.DemandeID">@Model.Description</a>
        </h3>
        <p>@Model.Description</p>
    </div>
    <div class="addToCart text-right">
        <p class="button ">
            <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-demandeId="@Model.DemandeID">
                Add to cart
            </a>
        </p>
    </div>
</div>
